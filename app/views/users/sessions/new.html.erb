<div class='block'>
  <h2><%= t('devise.sign_in') %></h2>

  <div class='content login'>
    <%= form_for(resource, :html=>{:class=>'form login'}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class='flash'>
        <%= devise_error_messages! %>
      </div>    
    
      <div class="group wat-cf">
        <div class="left">
          <%= f.label :name, :class=>'label' %>
        </div>
        <div class="right">
          <%= f.text_field :name, :class=>'text_field' %>
        </div>
      </div>

      <div class="group wat-cf">
        <div class="left">
          <%= f.label :password, :class=>'label' %>
        </div>
        <div class="right">
          <%= f.password_field :password, :class=>'text_field' %>
        </div>
      </div>

      <div class="group wat-cf">
        <div class='right'>
          <%= f.check_box :remember_me %> <%= f.label t(:remember_me, :default=>'angemeldet bleiben'), :class=>'check_box' %>
        </div>
      </div>

      <div class="group wat-cf">
        <div class='right'>
          <%= button_tag t("links.sign_in", :default=>'Einloggen'), :type=>'submit', :class=>'button' %>
        </div>
      </div>
    
      <div class="group wat-cf">
        <div class='right'>
          <%= link_to "Passwort vergessen?", new_password_path(resource_name) %>
        </div>
      </div>
    <% end -%>
  </div>
</div>