<div class='block'>
  <h2><%= t('devise.sign_up') %></h2>
  <div class='content login'>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => 'form login') do |f| %>
      <div class='flash'>
	<%= devise_error_messages! %>
      </div>

      <div class='group wat-cf' >
	<div class='left'><%= f.label :name, :class=>'label' %></div>      
	<div class="right"><%= f.text_field :name, :class=>'text_field' %></div>      
      </div>      	
      <div class='group wat-cf' >
	<div class='left'><%= f.label :email, :class=>'label' %></div>      
	<div class="right"><%= f.email_field :email, :class=>'text_field' %></div>
      </div>      
      <div class='group wat-cf' >
	<div class='left'><%= f.label :password, :class=>'label' %></div>      
	<div class="right"><%= f.password_field :password, :class=>'text_field' %></div>
      </div>      
      <div class='group wat-cf' >
	<div class='left'><%= f.label :password_confirmation, :class=>'label' %></div>      
	<div class="right"><%= f.password_field :password_confirmation, :class=>'text_field' %></div>
      </div>      
      <div class='group navform wat-cf'>
	<div class='right'>
	  <%= f.submit "Sign up", :class=>'button' %>
	</div>
      </div>
    <% end %>
    
    <%= render "links" %>
  </div>
</div>