<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", tipps_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_tipp_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", tipp_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.tipp.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @tipp.user_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.tipp.spiel_id", :default => t("activerecord.labels.spiel_id", :default => "Spiel")) %>:</b>
          <%= @tipp.spiel_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.tipp.team_a_result", :default => t("activerecord.labels.team_a_result", :default => "Team a result")) %>:</b>
          <%= @tipp.team_a_result %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.tipp.team_b_result", :default => t("activerecord.labels.team_b_result", :default => "Team b result")) %>:</b>
          <%= @tipp.team_b_result %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_tipp_path(@tipp), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), tipp_path(@tipp), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>