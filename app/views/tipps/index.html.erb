<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", tipps_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_tipp_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Tipps</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.tipp.user_id", :default => t("activerecord.labels.user_id", :default => "User_id")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @tipps.each do |tipp| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= tipp.id %>
          </td>
                    <td>
            <%= link_to tipp.user_id, tipp_path(tipp) %>
          </td>
                    <td>
            <%= tipp.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", tipp_path(tipp) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_tipp_path(tipp) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", tipp_path(tipp), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
